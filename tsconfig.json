{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "es2020",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "lib": [
            "es2018",
            "dom"
        ],
        "types": [
            "node"
        ],
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "@env/*": [
                "src/environments/*"
            ],
            "@env": [
                "src/environments"
            ],
            "@absaoss/ang-tools": [
                "projects/ang-tools/main/src/public-api"
            ],
            "@absaoss/ang-tools/*": [
                "projects/ang-tools/main/src/public-api/*"
            ],
            "@absaoss/ang-tools/shared": [
                "projects/ang-tools/shared/main/src/public-api"
            ],
            "@absaoss/ang-tools/shared/*": [
                "projects/ang-tools/shared/main/src/public-api/*"
            ],
            "@absaoss/ang-tools/common": [
                "projects/ang-tools/common/main/src/public-api"
            ],
            "@absaoss/ang-tools/common/*": [
                "projects/ang-tools/common/main/src/public-api/*"
            ],
            "@absaoss/ang-tools/common/layout/ang": [
                "projects/ang-tools/common/layout/ang/src/public-api"
            ],
            "@absaoss/ang-tools/common/layout/ang/*": [
                "projects/ang-tools/common/layout/ang/src/public-api/*"
            ],
            "@absaoss/ang-tools/utils/translate": [
                "projects/ang-tools/utils/translate/src/public-api"
            ],
            "@absaoss/ang-tools/utils/translate/*": [
                "projects/ang-tools/utils/translate/src/public-api/*"
            ],
            "@absaoss/ang-tools/utils": [
                "projects/ang-tools/utils/main/src/public-api"
            ],
            "@absaoss/ang-tools/utils/*": [
                "projects/ang-tools/utils/main/src/public-api/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "projects/**/*"
    ],
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
