{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "es2020",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "lib": [
            "es2018",
            "dom"
        ],
        "types": [
            "node"
        ],
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "@env/*": [
                "src/environments/*"
            ],
            "@env": [
                "src/environments"
            ],
            "symphony-api": [
                "projects/symphony-api/main/src/public-api"
            ],
            "symphony-api/*": [
                "projects/symphony-api/main/src/public-api/*"
            ],
            "symphony-common": [
              "projects/symphony-common/main/src/public-api",
              "dist/symphony-common/symphony-common",
              "dist/symphony-common"
            ],
            "symphony-common/*": [
                "projects/symphony-common/main/src/public-api/*"
            ],
            "symphony-shared": [
                "projects/symphony-shared/main/src/public-api"
            ],
            "symphony-shared/*": [
                "projects/symphony-shared/main/src/public-api/*"
            ],
            "symphony-utils": [
                "projects/symphony-utils/main/src/public-api"
            ],
            "symphony-utils/*": [
                "projects/symphony-utils/main/src/public-api/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "projects/**/*"
    ],
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true,
    }
}
